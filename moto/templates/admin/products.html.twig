{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="box">
    <div class="box-header">
        <h3 class="box-title">Товары</h3>
        <div style="width: 300px; margin-top: 15px">
            <a href="/admin/product/create">
                <button type="button"
                        class="btn btn-block btn-success">Добавить товар
                </button>
            </a>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1"
               class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Название</th>
                <th>Артикль</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td><a href="/admin/product/{{ product.id }}">{{ product.name }}</a></td>
                    <td>{{ product.article }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="/admin/product/{{ product.id }}/edit"><button type="button"
                                                                                     class="btn btn-info">Изменить
                                </button></a>
                            <button type="button" class="btn btn-danger">Удалить</button>
                        </div>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.box-body -->
    </div>
{% endblock %}