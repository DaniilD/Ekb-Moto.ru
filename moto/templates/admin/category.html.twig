{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Категория "{{ category.name }}"</h3>
            <div style="width: 300px; margin-top: 15px">
                <a href="/admin/category/create/{{ category.id }}">
                    <button type="button"
                            class="btn btn-block btn-success">Добавить подкатегорию
                    </button>
                </a>
            </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1"
                   class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Название</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td><a href="/admin/category/{{ category.id }}">{{ category.name }}</a></td>
                        <td>
                            <div class="btn-group">
                                <a href="/admin/category/{{ category.id }}/edit"><button type="button"
                                        class="btn btn-info">Изменить
                                </button></a>
                                <button type="button" class="btn btn-danger">Удалить</button>
                            </div>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th>Название</th>
                    <th>Действия</th>
                </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->

{% endblock %}